# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/licencias_construccion

# Redis Configuration (para códigos temporales y cache)
# Si no está configurado, usará almacenamiento en memoria como fallback
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RENIEC API Configuration (OPCIONAL - para validar DNIs reales)
# Si no está configurado, solo se valida el formato del DNI
# Proveedores soportados: apis_peru, consulta_dni, apiruc
# Registro: https://apis.net.pe/registro (500 consultas gratis/mes)
RENIEC_API_PROVIDER=apis_peru
RENIEC_API_TOKEN=

# JWT Secret
JWT_SECRET=tu_clave_secreta_muy_segura_cambiar_en_produccion

# Email Configuration (para notificaciones y verificación)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_app
EMAIL_FROM=noreply@licencias.com

# Frontend URL (para links de verificación)
FRONTEND_URL=http://localhost:3000

# SMS Configuration (opcional)
SMS_API_KEY=tu_api_key_sms
SMS_API_URL=https://api.sms-provider.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Encryption
ENCRYPTION_KEY=clave_de_cifrado_aes256_32_caracteres
